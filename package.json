{
    "name": "react-ssr-site-and-blog",
    "version": "1.0.0",
    "description": "Business card site and blog using typescript, react server side rendering, koajs and sqlite",
    "scripts": {
        "build": "rm -rf dist && tsc && cp -R public dist && parcel build src/react/index.tsx --out-dir dist/public && chmod -R 755 dist/public",
        "build:backend": "rm -rf dist && tsc && cp -R public dist",
        "fixture": "rm db/db-test.sqlite && sqlite3 db/db-test.sqlite < db/fixture.sql",
        "clean": "rm -rf dist",
        "lint": "eslint 'src/**/*.ts' 'test/**/*.test.ts'",
        "posttest": "eslint 'src/**/*.ts' 'test/**/*.test.ts'",
        "react": "parcel build src/react --out-dir dist/public",
        "react:dev": "parcel watch src/react/index.tsx --out-dir dist/public",
        "start": "node dist/src/index.js",
        "start:dev": "mkdir -p dist && cp -rf public dist && concurrently --kill-others \"npm run react:dev\" \"tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/src/index.js'\"",
        "test": "npm run build:backend && mocha --exit --recursive dist/test"
    },
    "keywords": [
        "typescript",
        "nodejs"
    ],
    "author": "Alexander Shogenov <i@shagg.ru>",
    "license": "ISC",
    "dependencies": {
        "app-root-path": "^2.2.1",
        "bcryptjs": "^2.4.3",
        "connected-react-router": "^6.4.0",
        "glamor": "^2.20.40",
        "history": "^4.9.0",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.7.0",
        "koa-bodyparser": "^4.2.1",
        "koa-isajax": "^1.0.5",
        "koa-router": "^7.4.0",
        "koa-static": "^5.0.0",
        "react-helmet": "^5.2.1",
        "react-quill": "^1.3.3",
        "react-redux": "^7.1.0",
        "react-router-dom": "^5.0.1",
        "react-router-redux": "^5.0.0-alpha.9",
        "redux": "^4.0.1",
        "redux-actions": "^2.6.5",
        "redux-saga": "^1.0.3",
        "sqlite3": "^4.0.9",
        "striptags": "^3.1.1"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.8",
        "@types/react": "^16.8.22",
        "@types/react-dom": "^16.8.4",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "concurrently": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-config-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-react": "^7.14.2",
        "mocha": "^10.2.0",
        "parcel-bundler": "^1.12.3",
        "parcel-plugin-compress": "^1.0.10",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "sinon": "^7.3.2",
        "supertest": "^4.0.2",
        "tsc-watch": "^2.2.1",
        "tslint": "^5.18.0",
        "typescript": "^3.5.2"
    }
}
